# Example Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# LDAP Configuration
LDAP_SERVER=ldap://your-ldap-server:389
LDAP_USER=admin
LDAP_PASSWORD=your-secure-ldap-password

# SQL Server Configuration
SQL_SERVER=your-sql-server
SQL_DATABASE=ProductionDB
SQL_USER=app_user
SQL_PASSWORD=your-secure-sql-password

# API Keys
API_KEY=your-api-key
SECRET_KEY=your-secret-key
ENCRYPTION_KEY=your-encryption-key

# Admin Configuration
ADMIN_PASSWORD=your-secure-admin-password

# Backup URLs (comma-separated)
BACKUP_URLS=http://backup1.internal.com,http://backup2.internal.com